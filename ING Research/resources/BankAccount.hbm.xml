<?xml version="1.0" encoding="utf-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
 	<class name="accounts.BankAccount" table="bankaccounts">  
    	<id name="IBAN" type="string" column="IBAN">  
    		<generator class="assigned"></generator>  
    	</id>  
    	<property name="mainHolderBSN" type="string" column="customer_BSN"></property>
    	<property name="balance" type="float" column="balance"></property>
    	<set name="owners" table="customerbankaccounts"
    		inverse="true" lazy="true" fetch="select">
    		<key>
    			<column name="IBAN" not-null="true"/>
    		</key>
    		<many-to-many entity-name="accounts.CustomerAccount">
    			<column name="customer_BSN" not-null="true"/>
    		</many-to-many>
    	</set> 
 	</class>
 </hibernate-mapping>  